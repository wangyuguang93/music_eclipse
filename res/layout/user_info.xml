<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/login_beijing"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:background="#345689"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="15dp"
            android:layout_height="30dp"
            android:src="@drawable/fanhui" />

        <TextView
            android:id="@+id/fan_exit"
            android:layout_width="40dp"
            android:layout_height="30dp"
            android:gravity="center_vertical"
            android:text="返回"
            android:textColor="#ffffff" />

        <TextView
            android:layout_width="60dp"
            android:layout_height="30dp"
            android:layout_marginLeft="90dp"
            android:gravity="center_vertical"
            android:text="用户信息"
            android:textColor="#ffffff" />

    </LinearLayout>

    <Button
        android:id="@+id/img_set_touxing"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="125dp"
        android:text="更换头像"
        android:textSize="12sp" />

    <Button
        android:id="@+id/btn_set_passwd"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="165dp"
        android:text="修改密码"
        android:textSize="12sp" />

    <TextView
        android:id="@+id/tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="40dp"
        android:text="学号"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_xingming"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="70dp"
        android:text="姓名"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_xb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="100dp"
        android:text="系部"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_bj"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="130dp"
        android:text="班级"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_below="@+id/btn_set_passwd"
        android:layout_centerHorizontal="true"
        android:background="#14A9A9"
        android:text="退出登录"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/img_head"
        android:layout_width="86dp"
        android:layout_height="86dp"
        android:layout_alignParentLeft="true"
        android:layout_alignTop="@+id/tv_id"
        android:src="@drawable/touxiang" />

</RelativeLayout>